<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Feed â€¢ Instaclone</title>

    <!-- Link to favicon -->
    <link rel="icon" type="image/png" href="./img/Instagram_icon.png" />

    <!-- Link to bootstrap for extra styling -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />

    <!-- Link to Bootstrap for icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />

    <!-- Link to our stylesheet -->
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <!-- Sidebar -->
    <div class="sidebar">
      <!-- instaclone logo -->
      <a href="/feed" class="logo d-flex align-items-center gap-3">
        <img class="img-fluid" src="/img/Instagram_icon.png" alt="logo" />
        <h1 class="h4 m-0">Instaclone<span style="color: #e1306c">.</span></h1>
      </a>

      <!-- profile img -->
      <div class="sidebar-profile mt-5">
        <div
          class="sidebar-profile-img d-flex align-items-center justify-content-center rounded-circle"
        >
          <img
            class="img-fluid"
            src="/img/no-profile-pic.png"
            alt="profile-img"
          />
        </div>

        <div class="name my-4">
          <span class="h5">Dua Lipa</span>
        </div>
      </div>

      <!-- about -->
      <div class="sidebar-about d-flex justify-content-between mt-3">
        <div class="box text-center">
          <h3>0</h3>
          <span>Posts</span>
        </div>
        <div class="box text-center">
          <h3>0</h3>
          <span>Followers</span>
        </div>
        <div class="box text-center">
          <h3>0</h3>
          <span>Following</span>
        </div>
      </div>

      <!-- nav links -->
      <nav class="nav flex-column mt-3">
        <a href="/feed" class="nav-link active">
          <span class="icon"><i class="bi bi-grid"></i></span>
          <span class="description">Feed</span>
        </a>

        <a href="" class="nav-link">
          <span class="icon"><i class="bi bi-person-circle"></i></span>
          <span class="description">Profile</span>
        </a>

        <a href="" class="nav-link">
          <span class="icon"><i class="bi bi-gear-fill"></i></span>
          <span class="description">Settings</span>
        </a>

        <a href="/logout" class="nav-link">
          <span class="icon"><i class="bi bi-box-arrow-left"></i></span>
          <span class="description">Logout</span>
        </a>
      </nav>
    </div>

    <!-- Main Content -->
    <main class="main-content-feed">
      <!-- header -->
      <div class="header mb-5 d-flex align-items-center justify-content-end">
        <div class="header-content">
          <button
            type="button"
            class="btn border-0 d-flex align-items-center gap-3"
            data-bs-toggle="modal"
            data-bs-target="#feed-modal"
          >
            <i class="bi bi-plus-circle-fill"></i>
            <div class="btn-text">Create Post</div>
          </button>
        </div>
      </div>

      <!-- feed -->
      <div class="feed-title pt-5 pb-3">
        <h1>Feed</h1>
      </div>

      <!-- posts -->
      <div class="main-posts">
        <% for(let i = 0; i < posts.length; i++) { %>
        <div class="post-box mb-4">
          <!-- takes user to post page -->
          <a href="/post/<%= posts[i]._id %>">
            <img
              class="img-fluid post-pic"
              src="<%= posts[i].image %>"
              alt=""
            />
          </a>

          <div class="post-info">
            <!-- profile -->
            <div class="post-profile">
              <div class="post-img rounded-circle">
                <img class="img-fluid" src="/img/no-profile-pic.png" alt="" />
              </div>
              <h3 class="m-0"><%= posts[i].user.userName %></h3>
            </div>

            <!-- likes and comments -->
            <div class="likes-comments">
              <div class="feed-likes">
                <i class="bi bi-heart"></i>
                <span><%= posts[i].likes %></span>
              </div>

              <div class="feed-comments">
                <i class="bi bi-chat"></i>
                <span><%= posts[i].comments %> </span>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </main>

    <!-- Create Post Modal -->
    <div
      class="modal fade"
      id="feed-modal"
      tabindex="-1"
      aria-labelledby="modal-title"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <!--modal header-->
          <div class="modal-header">
            <h5 class="modal-title" id="modal-title">Create a Post</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>

          <!-- modal body -->
          <div class="modal-body">
            <!-- makes post request to /post/createPost -->
            <form
              action="/post/createPost"
              enctype="multipart/form-data"
              method="post"
            >
              <!-- title -->
              <div class="mb-4">
                <label for="title" class="form-label">Title</label>
                <input
                  type="text"
                  class="form-control"
                  id="title"
                  name="title"
                  required
                />
              </div>

              <!-- caption -->
              <div class="mb-4">
                <label for="caption" class="form-label">Caption</label>
                <textarea
                  class="form-control"
                  name="caption"
                  id="caption"
                  required
                ></textarea>
              </div>

              <!-- image -->
              <div class="mb-4">
                <label for="imgUpload" class="form-label">
                  Upload an image</label
                >
                <input
                  type="file"
                  class="form-control"
                  id="imgUpload"
                  name="file"
                  required
                />
              </div>

              <!-- modal footer -->
              <div class="modal-footer">
                <!-- upload button -->
                <button type="submit" class="btn border-0" value="Upload">
                  Create Post
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Add Bootstrap Framework to our webpage -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
