<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Feed â€¢ Instaclone</title>

    <!-- Link to favicon -->
    <link rel="icon" type="image/png" href="./img/Instagram_icon.png" />

    <!-- Link to bootstrap for extra styling -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />

    <!-- Link to Bootstrap for icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />

    <!-- Link to our stylesheet -->
    <link rel="stylesheet" href="./styles.css" />
  </head>
  <body>
    <!-- Sidebar -->
    <div class="sidebar">
      <!-- instaclone logo -->
      <a href="/feed" class="logo d-flex align-items-center gap-3">
        <img class="img-fluid" src="./img/Instagram_icon.png" alt="logo" />
        <h1 class="h4 m-0">Instaclone<span style="color: #e1306c">.</span></h1>
      </a>

      <!-- profile img -->
      <div class="feed-profile mt-5">
        <div
          class="feed-profile-img d-flex align-items-center justify-content-center rounded-circle"
        >
          <img
            class="img-fluid"
            src="./img/no-profile-pic.png"
            alt="profile-img"
          />
        </div>
        <div class="name my-4">
          <span class="h5">Dua Lipa</span>
        </div>
      </div>

      <!-- about -->
      <div class="feed-about d-flex justify-content-between mt-3">
        <div class="box text-center">
          <h3>0</h3>
          <span>Posts</span>
        </div>
        <div class="box text-center">
          <h3>0</h3>
          <span>Followers</span>
        </div>
        <div class="box text-center">
          <h3>0</h3>
          <span>Following</span>
        </div>
      </div>

      <!-- nav links -->
      <nav class="nav flex-column mt-3">
        <a href="/feed" class="nav-link active">
          <span class="icon"><i class="bi bi-grid"></i></span>
          <span class="description">Feed</span>
        </a>

        <a href="" class="nav-link">
          <span class="icon"><i class="bi bi-person-circle"></i></span>
          <span class="description">Profile</span>
        </a>

        <a href="" class="nav-link">
          <span class="icon"><i class="bi bi-gear-fill"></i></span>
          <span class="description">Settings</span>
        </a>

        <a href="/logout" class="nav-link">
          <span class="icon"><i class="bi bi-box-arrow-left"></i></span>
          <span class="description">Logout</span>
        </a>
      </nav>
    </div>

    <!-- Main Content -->
    <main class="main-content">
      <!-- header -->
      <div class="header mb-5">
        <div class="header-content">
          <button type="button" class="btn border-0">
            <i class="bi bi-plus-circle-fill"></i>
            <div class="btn-text">Create Post</div>
          </button>
        </div>
      </div>

      <!-- feed -->
      <div class="feed-title pt-5 pb-3">
        <h1>Feed</h1>
      </div>

      <!-- posts -->
      <div class="main-posts">
        <div class="post-box mb-4">
          <!-- TODO: takes user to post page -->
          <a href="">
            <img class="img-fluid post-pic" src="./img/vacay-pic.jpg" alt="" />
          </a>

          <div class="post-info">
            <div class="post-profile">
              <div class="post-img">
                <img class="img-fluid" src="./img/no-profile-pic.png" alt="" />
              </div>
              <h3 class="m-0">Dua Lipa</h3>
            </div>

            <div class="likes-comments">
              <div class="feed-likes">
                <i class="bi bi-heart"></i>
                <span>0</span>
              </div>

              <div class="feed-comments">
                <i class="bi bi-chat"></i>
                <span>0</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Create Post Modal -->

    <!-- Add Bootstrap Framework to our webpage -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
